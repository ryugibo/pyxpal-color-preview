{
  "name": "pyxpal-color-preview",
  "displayName": "Pyxpal Color Preview",
  "description": "Show color preview in .pyxpal files when a line contains 6-digit HEX code without #.",
  "publisher": "ryugibo",
  "version": "0.0.4",
  "repository": {
    "type": "git",
    "url": "https://github.com/ryugibo/pyxpal-color-preview.git"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:pyxpal"
  ],
  "main": "./extension.js",
  "contributes": {
    "languages": [
      {
        "id": "pyxpal",
        "extensions": [
          ".pyxpal"
        ],
        "aliases": [
          "Pyxpal"
        ]
      }
    ]
  },
  "files": [
    "extension.js",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@vscode/vsce": "^3.6.0"
  }
}
